<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".BillPayFragments.BillTransactionFragment">

    <ImageView
        android:id="@+id/imageView27"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:contentDescription="@string/mobile_operator"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_bill_pay"
        app:tint="@color/black"/>

    <TextView
        android:id="@+id/textView40"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/recharge_details"
        android:fontFamily="@font/montserrat"
        android:textColor="@color/blue"
        android:textSize="21sp"
        android:textStyle="bold"
        android:layout_marginStart="12dp"
        app:layout_constraintStart_toEndOf="@id/imageView27"
        app:layout_constraintTop_toTopOf="@id/imageView27"
        app:layout_constraintBottom_toBottomOf="@id/imageView27"/>

    <View
        android:id="@+id/divider9"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:background="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView40"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:layout_marginTop="12dp"
        app:layout_constraintTop_toBottomOf="@id/divider9">


        <TextView
            android:id="@+id/textView41"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/biller_name"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="19sp"/>

        <EditText
            android:id="@+id/edit_text_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:background="@drawable/recharge_edit_text_background"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="number"
            android:hint="@string/biller_name"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView42"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/consumer_number"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edit_text_recharge_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:background="@drawable/recharge_edit_text_background"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="number"
            android:hint="@string/consumer_number"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/textView43"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/bill_amount"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="19sp"
            android:layout_marginTop="20dp"/>

        <EditText
            android:id="@+id/edit_text_amount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:layout_marginTop="12dp"
            android:background="@drawable/recharge_edit_text_background"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:inputType="numberPassword"
            android:hint="@string/enter_bill_amount"
            android:fontFamily="@font/montserrat"
            android:textColor="@color/black"
            android:textSize="17sp"
            android:importantForAutofill="no" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_confirm_payment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_yellow_background"
            android:text="@string/confirm_payment"
            android:textColor="@color/white"
            style="@android:style/Widget.Button"
            android:fontFamily="@font/montserrat"
            android:textStyle="bold"
            android:textSize="17sp"
            android:paddingTop="12dp"
            android:paddingBottom="12dp"
            android:layout_marginTop="24dp" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>