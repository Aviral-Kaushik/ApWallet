<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dashboard_black"
    tools:context=".NavigationFragments.HomeFragment">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:background="@color/dashboard_black">


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/dashboard_black">


                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:src="@drawable/ic_profile_picture"
                    android:layout_marginStart="32dp"
                    android:layout_marginTop="32dp"
                    android:contentDescription="@string/martin_george"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/martin_george"
                    android:textSize="18sp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginStart="24dp"
                    app:layout_constraintTop_toTopOf="@id/imageView8"
                    app:layout_constraintBottom_toBottomOf="@id/imageView8"
                    app:layout_constraintStart_toEndOf="@id/imageView8"/>

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:contentDescription="@string/martin_george"
                    android:src="@drawable/ic_notification"
                    android:layout_marginEnd="32dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="@id/textView8"
                    app:layout_constraintBottom_toBottomOf="@id/textView8"/>

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/account_no_586742159568"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/white"
                    android:layout_marginTop="8dp"
                    android:textSize="15sp"
                    app:layout_constraintStart_toStartOf="@id/imageView8"
                    app:layout_constraintTop_toBottomOf="@id/imageView8"/>

                <View
                    android:id="@+id/divider"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#f5f5f5"
                    android:layout_marginStart="32dp"
                    android:layout_marginEnd="32dp"
                    android:layout_marginTop="16dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/textView9"/>

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/apwallet_looks_ahead_to_make_your_payment_secure_and_easy"
                    android:fontFamily="@font/montserrat"
                    android:layout_marginTop="12dp"
                    android:textSize="16sp"
                    android:layout_marginStart="32dp"
                    android:textColor="@color/white"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider"/>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="32dp"
                    android:background="@drawable/home_fragment_main_background"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent">

                    <TextView
                        android:id="@+id/textView11"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="32dp"
                        android:layout_marginTop="24dp"
                        android:fontFamily="@font/montserrat"
                        android:text="@string/services"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:layout_marginTop="6dp"
                        android:background="#000000"
                        android:layout_marginEnd="32dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/textView11"
                        app:layout_constraintTop_toBottomOf="@id/textView11" />

                    <GridLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="28sp"
                        android:layout_marginTop="28dp"
                        android:layout_marginEnd="28dp"
                        android:layout_marginBottom="28dp"
                        android:columnCount="3"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/divider2">

                        <LinearLayout
                            android:id="@+id/btn_add_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView10"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/add_money"
                                android:padding="14dp"
                                android:src="@drawable/ic_add_money"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/add_money"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_mobile_recharge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView11"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/mobile_recharge"
                                android:padding="14dp"
                                android:src="@drawable/ic_recharge"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView13"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/mobile_recharge"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_send_money"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView12"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/send_money"
                                android:padding="14dp"
                                android:src="@drawable/ic_send_money"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView14"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/send_money"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_merchant_pay"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView13"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/scan_amp_pay"
                                android:padding="14dp"
                                android:src="@drawable/ic_scan_pay"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView15"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/scan_amp_pay"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_bill_payment"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView14"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/bill_pay"
                                android:padding="14dp"
                                android:src="@drawable/ic_bill_pay"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView16"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/bill_pay"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_movie_ticket"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView15"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/movie_ticket"
                                android:padding="14dp"
                                android:src="@drawable/ic_moview"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView17"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/movie_ticket"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_insurance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView16"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/insurance"
                                android:padding="14dp"
                                android:src="@drawable/ic_insurance"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView18"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/insurance"
                                android:textColor="@color/black"
                                android:textSize="13sp" />


                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_hotels"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView17"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:layout_marginStart="8dp"
                                android:layout_marginEnd="8dp"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/hotels"
                                android:padding="14dp"
                                android:src="@drawable/ic_hotels"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView19"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/hotels"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_cards"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_margin="16dp"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/imageView18"
                                android:layout_width="75dp"
                                android:layout_height="75dp"
                                android:layout_gravity="center"
                                android:background="@drawable/main_grid_image_background"
                                android:contentDescription="@string/movie_ticket"
                                android:padding="14dp"
                                android:src="@drawable/ic_cards"
                                app:tint="@color/black" />

                            <TextView
                                android:id="@+id/textView20"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="8dp"
                                android:fontFamily="@font/montserrat"
                                android:gravity="center"
                                android:text="@string/your_cards"
                                android:textColor="@color/black"
                                android:textSize="13sp" />

                        </LinearLayout>

                    </GridLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>